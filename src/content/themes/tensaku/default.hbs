    <link rel="stylesheet" href="{{asset "css/post/post-default.css"}}" />
    <link rel="stylesheet" href="{{asset "css/post/post-common.css"}}" />
    {{/if}}

    {{!-- ghost configured head --}}
    {{ghost_head}}
